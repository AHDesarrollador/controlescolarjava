                <VBox spacing="5.0" styleClass="menu-section">
                    <children>
                        <Button fx:id="btnAlumnos" maxWidth="1.7976931348623157E308" onAction="#handleAlumnos" styleClass="menu-button" text="ðŸ‘¥ Alumnos" />
                        <Button fx:id="btnProfesores" maxWidth="1.7976931348623157E308" onAction="#handleProfesores" styleClass="menu-button" text="ðŸ‘¨â€ðŸ« Profesores" />
                        <Button fx:id="btnMaterias" maxWidth="1.7976931348623157E308" onAction="#handleMaterias" styleClass="menu-button" text="ðŸ“š Materias" />
                        <Button fx:id="btnCalificaciones" maxWidth="1.7976931348623157E308" onAction="#handleCalificaciones" styleClass="menu-button" text="ðŸ“‹ Calificaciones" />
                        <Button fx:id="btnAsistencia" maxWidth="1.7976931348623157E308" onAction="#handleAsistencia" styleClass="menu-button" text="âœ… Asistencia" />
                        <Button fx:id="btnPagos" maxWidth="1.7976931348623157E308" onAction="#handlePagos" styleClass="menu-button" text="ðŸ’° Pagos" />
                        <Button fx:id="btnReportes" maxWidth="1.7976931348623157E308" onAction="#handleReportes" styleClass="menu-button" text="ðŸ“Š Reportes" />
